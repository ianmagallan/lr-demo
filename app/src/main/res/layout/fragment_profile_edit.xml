<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <EditText
        android:id="@+id/profile_edit_et_username"
        android:layout_width="@dimen/general_input_width"
        android:layout_height="@dimen/general_input_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/general_textfield_background"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/general_sides_padding"
        android:paddingTop="@dimen/general_top_bottom_padding"
        android:paddingEnd="@dimen/general_sides_padding"
        android:paddingBottom="@dimen/general_top_bottom_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/profile_edit_et_name"
        android:layout_width="@dimen/general_input_width"
        android:layout_height="@dimen/general_input_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/general_textfield_background"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/general_sides_padding"
        android:paddingTop="@dimen/general_top_bottom_padding"
        android:paddingEnd="@dimen/general_sides_padding"
        android:paddingBottom="@dimen/general_top_bottom_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_et_username" />

    <EditText
        android:id="@+id/profile_edit_et_surname"
        android:layout_width="@dimen/general_input_width"
        android:layout_height="@dimen/general_input_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/general_textfield_background"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/general_sides_padding"
        android:paddingTop="@dimen/general_top_bottom_padding"
        android:paddingEnd="@dimen/general_sides_padding"
        android:paddingBottom="@dimen/general_top_bottom_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_et_name" />

    <EditText
        android:id="@+id/profile_edit_et_phone"
        android:layout_width="@dimen/general_input_width"
        android:layout_height="@dimen/general_input_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/general_textfield_background"
        android:paddingStart="@dimen/general_sides_padding"
        android:paddingTop="@dimen/general_top_bottom_padding"
        android:paddingEnd="@dimen/general_sides_padding"
        android:paddingBottom="@dimen/general_top_bottom_padding"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_et_surname" />


</android.support.constraint.ConstraintLayout>